#ifndef UVetorH
#define UVetorH

class  Vetor{
	private:
		double *numeros;
		double *numerosOrdenados;
		int    *cores;
		int    *coresOrdenadas;
		int    tamanhoDoVetor;
		int    faixaDeValores;
	public:
/*------------------------CONSTRUTORES E DESTRUTORES-------------------------*/
		Vetor();
		~Vetor();
/*-----------------------------GETTER AND SETTER-----------------------------*/
		void   setNumero(double pNumero, int pPosicao);
		double *getNumero();
		void   setCor(int pNumero, int pPosicao);
		int    *getCor();
		void   setTamanhoDoVetor(int pTamanho);
		int    getTamanhoDoVetor();
		void   setFaixaDeValores(int pFaixa);
		int    getFaixaDeValores();
/*-----------------------------------WORK------------------------------------*/
        void   dimensionarVetor();
		void   carregarVetor();
		void   ordenarVetorPorSelecao();



};





//---------------------------------------------------------------------------
#endif
